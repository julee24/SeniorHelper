<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#5CAB7D"
        android:layout_margin="17dp"
        android:fontFamily="@font/pretendardsemibold"
        android:text="구청 사이트 접속"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5CAB7D">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gu_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gu_image" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="142dp"

                android:layout_alignLeft="@+id/gu_image"
                android:layout_alignTop="@+id/gu_image"
                android:layout_alignRight="@+id/gu_image"
                android:layout_alignBottom="@+id/gu_image"

                android:layout_marginLeft="164dp"
                android:layout_marginTop="256dp"
                android:layout_marginRight="182dp"
                android:layout_marginBottom="244dp"
                android:src="@drawable/arrow3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="91dp"

                android:layout_alignLeft="@+id/gu_image"
                android:layout_alignTop="@+id/gu_image"
                android:layout_alignRight="@+id/gu_image"
                android:layout_alignBottom="@+id/gu_image"

                android:layout_marginLeft="110dp"
                android:layout_marginTop="260dp"
                android:layout_marginRight="237dp"
                android:layout_marginBottom="291dp"
                android:src="@drawable/arrow2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="140dp"


                android:layout_marginLeft="0dp"

                android:layout_marginTop="465dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/info_textbox"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="구청사이트 접속에서는\n시청, 의료기관, 구청 사이트에\n쉽게 들어갈 수 있어요!"
                android:textAlignment="center"
                android:textColor="#5CAB7D"
                android:textSize="25sp" />


        </RelativeLayout>



    </ScrollView>




</LinearLayout>


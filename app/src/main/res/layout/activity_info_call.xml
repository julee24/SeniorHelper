<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#5CAB7D"
        android:layout_margin="17dp"
        android:fontFamily="@font/pretendardsemibold"
        android:text="보호자 전화"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5CAB7D"
        android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/call_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_call"/>

            <TextView
                android:layout_alignLeft="@id/call_image"
                android:layout_alignRight="@id/call_image"
                android:layout_alignTop="@id/call_image"
                android:layout_alignBottom="@id/call_image"
                android:layout_marginTop="300dp"
                android:layout_marginBottom="190dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox"
                android:elevation="15dp"
                android:gravity="center"
                android:textAlignment="center"
                android:lineSpacingMultiplier="1"
                android:fontFamily="@font/pretendardsemibold"
                android:textColor="#5CAB7D"
                android:textSize="25sp"
                android:text="'보호자 전화'는\n등록된 보호자 번호로\n전화를 거는 버튼이에요"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="142dp"
                    android:src="@drawable/arrow3"

                    android:layout_marginTop="420dp"
                    android:layout_marginLeft="175dp"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/arrow5"

                    android:layout_marginTop="515dp"
                    android:layout_marginLeft="170dp"/>


                <ImageView
                    android:id="@+id/call1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/call1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/call1"
                    android:layout_alignTop="@id/call1"
                    android:layout_alignRight="@id/call1"
                    android:layout_alignBottom="@id/call1"

                    android:layout_marginTop="800dp"
                    android:layout_marginBottom="1250dp"

                    android:background="@drawable/info_textbox2"
                    android:elevation="15dp"
                    android:fontFamily="@font/pretendardsemibold"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1"
                    android:text="처음 사용하실 땐\n보호자의 번호를 저장해주세요"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="143dp"
                    android:src="@drawable/arrow1"
                    android:layout_marginTop="1080dp"
                    android:layout_marginLeft="50dp"/>

                <ImageView
                    android:id="@+id/call2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1330dp"
                    android:src="@drawable/call2" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/call2"
                    android:layout_alignTop="@id/call2"
                    android:layout_alignRight="@id/call2"
                    android:layout_alignBottom="@id/call2"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="500dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="500dp"
                    android:background="@drawable/info_textbox"
                    android:elevation="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:fontFamily="@font/pretendardsemibold"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1"
                        android:text="보호자의 번호를 수정하시려면"
                        android:textAlignment="center"
                        android:textColor="#5CAB7D"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:background="#ffffff"
                        android:drawableLeft="@drawable/tuto_menu"
                        android:drawablePadding="100dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1"
                        android:text="를 누르시고"
                        android:textAlignment="center"
                        android:textColor="#5CAB7D"
                        android:textSize="25sp" />


                    <TextView
                        android:layout_width="412dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:fontFamily="@font/pretendardsemibold"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1"
                        android:text="'전화번호 수정을 눌러\n저장할 번호를 다시 입력해주세요!"
                        android:textAlignment="center"
                        android:textColor="#5CAB7D"
                        android:textSize="25sp" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </RelativeLayout>
    </ScrollView>





</LinearLayout>
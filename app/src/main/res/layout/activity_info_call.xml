<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/call_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#5CAB7D"
        android:layout_margin="17dp"
        android:fontFamily="@font/pretendardsemibold"
        android:text="보호자 전화"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5CAB7D"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_call"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toStartOf="parent"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/info_textbox"
                android:elevation="15dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:text="'보호자 전화'는\n등록된 보호자 번호로\n전화를 거는 버튼이에요"
                android:textAlignment="center"
                android:textColor="#5CAB7D"
                android:textSize="25sp"

                app:layout_constraintTop_toBottomOf="@+id/guideline3"
                />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:src="@drawable/arrow6"
                app:layout_constraintTop_toBottomOf="@+id/guideline2"
                app:layout_constraintLeft_toRightOf="@+id/guideline10"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/arrow5"
                app:layout_constraintTop_toBottomOf="@+id/guideline5"
                app:layout_constraintLeft_toRightOf="@+id/guideline4"
                />


            <ImageView
                android:id="@+id/call1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/call1"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/menu_call"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="처음 사용하실 땐\n보호자의 번호를 저장해주세요"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@id/guideline6"/>

            <ImageView
                android:layout_width="65dp"
                android:layout_height="85dp"
                android:src="@drawable/arrow1"
                app:layout_constraintTop_toBottomOf="@+id/guideline7"
                app:layout_constraintLeft_toRightOf="@+id/guideline8"
                />

            <ImageView
                android:id="@+id/call2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/call2"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/call1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox"
                android:elevation="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/guideline9">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:fontFamily="@font/pretendardsemibold"
                    android:gravity="center"
                    android:text="보호자의 번호를 수정하시려면"
                    android:textAlignment="center"
                    android:textColor="#5CAB7D"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:src="@drawable/tuto_menu"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:fontFamily="@font/pretendardsemibold"
                        android:gravity="center"
                        android:text=" 를 누르시고"
                        android:textAlignment="center"
                        android:textColor="#5CAB7D"
                        android:textSize="25sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:fontFamily="@font/pretendardsemibold"
                    android:gravity="center"
                    android:text="'전화번호 수정을 눌러\n저장할 번호를 다시 입력해주세요!"
                    android:textAlignment="center"
                    android:textColor="#5CAB7D"
                    android:textSize="25sp"/>

            </LinearLayout>




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.26"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.142" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.435" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.24" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.315" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.485" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1315" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.905" />



            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>
</LinearLayout>
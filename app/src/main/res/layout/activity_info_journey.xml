<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/call_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#5CAB7D"
        android:layout_margin="17dp"
        android:fontFamily="@font/pretendardsemibold"
        android:text="일기 작성"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5CAB7D"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/menu_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_journey"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/arrow2"
                app:layout_constraintBottom_toBottomOf="@+id/guideline32"
                app:layout_constraintLeft_toRightOf="@+id/guideline38"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/arrow1"
                app:layout_constraintBottom_toBottomOf="@+id/guideline33"
                app:layout_constraintRight_toLeftOf="@+id/guideline39"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/info_textbox"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="'일기작성'에서는\n사진과 함께 간단한 한줄일기를\n작성할 수 있어요!"
                android:textAlignment="center"
                android:textColor="#5CAB7D"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@+id/guideline40"
                />

            <ImageView
                android:id="@+id/journey5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/journey5"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/menu_journey"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="일기에 사진을 올리기 위해\n'허용을 눌러주세요!"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@+id/guideline41"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/arrow1"
                app:layout_constraintBottom_toBottomOf="@+id/guideline42"
                app:layout_constraintRight_toLeftOf="@+id/guideline43"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/arrow3"
                app:layout_constraintBottom_toBottomOf="@+id/guideline42"
                app:layout_constraintLeft_toRightOf="@+id/guideline44"/>

            <ImageView
                android:id="@+id/journey1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/journey1"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/journey5"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/journey_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="이 부분에 일기를 작성해주세요"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@id/guideline45"
                app:layout_constraintRight_toLeftOf="@id/guideline46"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/arrow6"
                app:layout_constraintTop_toBottomOf="@+id/guideline47"
                app:layout_constraintRight_toLeftOf="@+id/journey_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="여기를 누르면\n사진도 올릴 수 있어요!"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@id/guideline48"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/journey_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="오늘 기분이 어땠는지\n표시해주세요"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintTop_toBottomOf="@id/guideline49"
                app:layout_constraintRight_toLeftOf="@id/guideline46"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/arrow3"
                app:layout_constraintBottom_toBottomOf="@+id/guideline56"
                app:layout_constraintRight_toLeftOf="@+id/journey_tv2"/>

            <ImageView
                android:id="@+id/journey2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/journey2"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/journey1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="일기를 다 작성하셨으면 '저장'\n일기를 삭제하고 싶으시면 '삭제'\n작성을 중단하고 싶으시면 '닫기'\n 눌러주세요"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@id/guideline50"
                />

            <ImageView
                android:id="@+id/journey3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/journey3"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/journey2"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/arrow2"
                app:layout_constraintBottom_toBottomOf="@+id/guideline52"
                app:layout_constraintLeft_toLeftOf="@+id/guideline53"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="저장된 일기는 하단의 '목록'에서 확인할 수 있어요"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/arrow"
                />

            <ImageView
                android:id="@+id/journey4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/journey4"
                android:adjustViewBounds="true"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/journey3"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_textbox2"
                android:elevation="10dp"
                android:fontFamily="@font/pretendardsemibold"
                android:gravity="center"
                android:lineSpacingMultiplier="1"
                android:text="'통계'에서는 그동안의 기분이\n어떻게 변화했는지\n확인할 수 있어요"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="@id/guideline54"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/arrow2"
                app:layout_constraintBottom_toBottomOf="@+id/guideline55"
                app:layout_constraintLeft_toLeftOf="@+id/guideline57"/>




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.073" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.078"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.58" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.575" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.0975" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.236" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.815" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.336"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.331" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.375" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.416" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.634" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.815" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.126"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.908" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.99" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.442" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.73" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>